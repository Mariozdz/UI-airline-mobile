<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.checkout.CheckoutFragment">

    <data>
        <variable
            name="editform"
            type="una.moviles.logic.Flight" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/detalles_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#087E8B"
            android:gravity="center_horizontal"
            android:text="About Flight:"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="133dp"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:text="Origen:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@{ editform.origen }" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/det_destination"
                android:textColor="@color/black"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:text="Destination:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/det_destination2"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@{ editform.destino }" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/det_precio"
                android:textColor="@color/black"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/det_precio2"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@{ editform.price }" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/det_asientos"
                android:textColor="@color/black"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="Avaliable sits:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/det_asientos2"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@{ editform.disponibles }" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/det_salida"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:text="Outbound Date:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/det_salida2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:gravity="center_horizontal"
                android:text="@{ editform.sdate }" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/det_hora"
                android:layout_width="131dp"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:text="Outbound time:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/det_hora2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:gravity="center_horizontal"
                android:text="@{ editform.stime }" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/det_arrive"
                android:layout_width="131dp"
                android:textColor="@color/black"

                android:layout_height="wrap_content"
                android:text="Arrive time:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/det_arrive2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:text="@{ editform.arrivetime }" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"

            android:text="Do you want to book this flight?"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="choose the number of tickers!!!"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#087E8B"
            android:ems="10"
            android:hint="Number of tickets"
            android:inputType="textPersonName"
            android:textColor="#101010"
            android:textColorHint="#6C6666" />


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="270dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:background="@color/Basic"
            android:entries="@array/positions"
            android:prompt="@string/position_prompt" />




        <Button
            android:id="@+id/det_submmit"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded"
            android:text="Reserve" />

    </LinearLayout>
</layout>