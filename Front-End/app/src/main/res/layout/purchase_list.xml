<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="purchases"
            type="una.moviles.logic.Purchase" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pur_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{purchases.userid}" />

            <TextView
                android:id="@+id/pur_vuelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{purchases.flightid}" />

            <TextView
                android:id="@+id/pur_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{purchases.totalprice}" />

            <TextView
                android:id="@+id/pur_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{purchases.tickets}" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>