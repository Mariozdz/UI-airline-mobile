<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="flights"
            type="una.moviles.logic.Flight" />


    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fli_origen"
                    android:text="@{flights.origen}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fli_outdate"
                    android:text="@{flights.outbounddate}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fli_horasalida"
                    android:text="@{ flights.stime}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fli_precio"
                    android:text="@{flights.stime}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fli_destino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.destino}" />

                <TextView
                    android:id="@+id/fli_arrivetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.arrivetime}" />

                <TextView
                    android:id="@+id/fli_disponibles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.disponibles}" />

                <TextView
                    android:id="@+id/fli_descuento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.discount}" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>