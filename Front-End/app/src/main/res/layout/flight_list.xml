<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="flights"
            type="una.moviles.logic.Flight" />


    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fli_origen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.origen}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fli_outdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.outbounddate}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fli_horasalida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{ flights.stime}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fli_precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.price}"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_vuelo"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fli_destino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.destino}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fli_arrivetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.arrivetime}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fli_disponibles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.disponibles}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fli_descuento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{flights.discount}"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>